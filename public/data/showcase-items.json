            "controlPanel":"<div id={`cp${index}`} className='control-panel'><div></div><input id={`cp${index}_ip01`} className='showcase-input-button' type='button' value='button 1' onClick={eH01}/><input id={`cp${index}_ip01`} className='showcase-input-button' type='button' value='button 2' onClick={eH02}/></div>",
            "eventTargetIDs": ["dp01_et01"],
            "inputIDs":["cp01_ip01","cp01_ip01"],
            "eventHandlers":[
                {"function" : {"arguments":"target", "body":"document.getElementByID(target).style.backgroundColor='red';"}},
                {"function" : {"arguments":"target", "body":"document.getElementByID(target).style.backgroundColor='blue';"}}
            ],
            "imageURL":"/next.svg"
        },
